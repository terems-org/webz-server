		</init-param>
		<init-param>
			<param-name>dbxClientVersion</param-name>
			<param-value>${project.version}</param-value>
		</init-param>
    </servlet>
	
    <servlet-mapping>
        <servlet-name>WebzHttpServletEnvelope</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>

</web-app>