<?xml version="1.0" encoding="UTF-8"?>
<web-app
		xmlns="http://java.sun.com/xml/ns/javaee"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
		version="3.0"
		metadata-complete="true"><!-- disabling Servlet 3.x annotation scanning -->
<!--
<web-app
		xmlns="http://xmlns.jcp.org/xml/ns/javaee"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
		version="3.1"
		metadata-complete="true">
-->

	<display-name>${project.name}</display-name>
	<description>${project.description}</description>

	<servlet>
		<servlet-name>WebzDropbox</servlet-name>
		<servlet-class>org.terems.webz.servlet.WebzHttpServletEnvelope</servlet-class>

		<init-param>
			<param-name>rootFileSystemProperties</param-name>
			<param-value>dbx-webz-pedesis.properties</param-value>
		</init-param>
		<!-- <async-supported>true</async-supported> -->
	</servlet>

	<servlet>
		<servlet-name>WebzLocal</servlet-name>
		<servlet-class>org.terems.webz.servlet.WebzHttpServletEnvelope</servlet-class>

		<init-param>
			<param-name>rootFileSystemProperties</param-name>
			<param-value>local-webz-pedesis.properties</param-value>
		</init-param>
		<!-- <async-supported>true</async-supported> -->
	</servlet>

	<servlet-mapping>
		<servlet-name>WebzDropbox</servlet-name>
		<url-pattern>/dropbox/*</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>WebzLocal</servlet-name>
		<url-pattern>/local/*</url-pattern>
	</servlet-mapping>

</web-app>